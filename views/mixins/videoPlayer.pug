mixin videoPlayer(video={}) 
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPlayer_column
                input.videoPlayer_volume#jsVolume(type="range", min="0", max="1", step="0.1", value="0.5")
                span#jsVolumeButton
                    i.fas.fa-volume-up
                span
                    span#currentTime 00:00:00
                    |/
                    span#totalTime 00:00:00
            .videoPlayer_column
                span#jsPlayButton 
                    i.fas.fa-play
            .videoPlayer_column
                span#jsExpandButton
                    i.fas.fa-expand