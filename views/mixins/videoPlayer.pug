mixin videoPlayer(video={}) 
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPlayer_column
                span
                    i.fas.fa-volume-up
                span
                    | 00:00 / 5:00
            .videoPlayer_column
                span#jsPlayButton 
                    i.fas.fa-play
            .videoPlayer_column
                span
                    i.fas.fa-expand